<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="4dp"
        android:id="@+id/cardView3">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_below="@+id/item_meeting_room_image"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_meeting_room_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="#tag1 #tag2" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_person_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/item_meeting_room_number_of_people"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="30"/>


            </LinearLayout>


            <ImageView
                android:padding="5dp"
                android:id="@+id/item_meeting_room_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:src="@color/base_gree" />

            <TextView
                android:id="@+id/item_meeting_room_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/item_meeting_room_image"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="27dp"
                android:fontFamily="@font/nunito_extralight"
                android:text="Title"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="24sp"
                android:textStyle="bold" />


        </RelativeLayout>




    </android.support.v7.widget.CardView>



</RelativeLayout>