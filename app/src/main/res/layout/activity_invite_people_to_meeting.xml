<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.candor.youthapp.COMMUNICATE.MEETINGS.InvitePeopleToMeetingActivity">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/invite_people_to_meeting_search_text"
                android:background="@drawable/button_shape_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />
            <ImageButton
                android:id="@+id/invite_people_to_meeting_search_button"
                android:src="@drawable/ic_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="followers"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/invite_people_to_meeting_horizontal_recycler_view"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <View
                    android:background="#787878"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="other people with similar interest"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"/>
                <View
                    android:background="#787878"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/invite_people_to_meeting_vertical_recycler_view"
                    android:background="#fff"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/invite_people_to_meeting_go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape_1"
        android:text="go !" />
</LinearLayout>
